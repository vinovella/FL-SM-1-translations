    # mc "Wurst Delivery!"
    mc "Wurst Delivery!"

# game/code/scenes/theatre/sm1fs-t005.rpy:268
translate italian sm1fs_t005_3331c2dc:

    # dvh "Huh?"
    dvh "Eh?"

# game/code/scenes/theatre/sm1fs-t005.rpy:271
translate italian sm1fs_t005_6efbba65:

    # km "Worst what?"
    km "Worst cosa?"

